<div>
    <h1>Este es el producto del id seleccionado</h1>

    {{#if singleProduct}}
    <div class="card" style="width: 18rem;">
        <img src="{{singleProduct.thumbnail}}" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{singleProduct.title}} $: {{singleProduct.price}}</h5>
            <p class="card-text">{{singleProduct.description}}</p>
            <p class="card-text">Stock: {{singleProduct.stock}}</p>
            {{!-- <a href="#" class="btn btn-danger">Delete</a> --}}
        </div>
    </div>
    {{/if}}
</div>