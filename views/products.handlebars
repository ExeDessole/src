<div>
    <h1>Estos son todos nuestros productos</h1>
    
        <!-- Botones de ordenar -->
    <form action="/products" method="get">
    <!-- Botón de ordenar ascendente -->
    <button class="btn- btn- primary" type="submit" name="sort" value="price_asc" {{#if isSortedByPriceAsc}}disabled{{/if}}>
        Ordenar por precio ascendente
    </button>
    
    <!-- Botón de ordenar descendente -->
    <button class="btn- btn- primary" type="submit" name="sort" value="price_desc" {{#if isSortedByPriceDesc}}disabled{{/if}}>
        Ordenar por precio descendente
    </button>
    </form>

    {{#if singleProduct}}
        <div class="card" style="width: 18rem;">
            <img src="{{singleProduct.thumbnail}}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{singleProduct.title}} $: {{singleProduct.price}}</h5>
                <p class="card-text">{{singleProduct.description}}</p>
                <p class="card-text">Stock: {{singleProduct.stock}}</p>
                {{!-- <a href="#" class="btn btn-danger">Delete</a> --}}
            </div>
        </div>
    {{else}}
        {{#each productsListRecupero}}
            <div class="card" style="width: 18rem;">
                <img src="{{this.thumbnail}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}} $: {{this.price}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text">Stock: {{this.stock}}</p>
                    {{!-- <a href="#" class="btn btn-danger">Delete</a> --}}
                </div>
            </div>
        {{/each}}
    {{/if}}
</div>

{{#if hasPrevPage}}
  <a href="/products?page={{prevPage}}">Anterior</a>
{{/if}}

{{#if hasNextPage}}
  <a href="/products?page={{nextPage}}">Siguiente</a>
{{/if}}

<p>Pagina {{currentPage}} de {{totalPages}}</p>
